{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "Company.Microservices",
    "Audience": "Company.Microservices",
    "SecretKey": "YourSuperSecretKeyThatIsAtLeast32CharactersLong!12345678901234567890"
  },
  "ReverseProxy": {
    "Routes": {
      "order-service-route": {
        "ClusterId": "order-service-cluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser"
      },
      "inventory-service-route": {
        "ClusterId": "inventory-service-cluster",
        "Match": {
          "Path": "/api/inventory/{**catch-all}"
        },
        "AuthorizationPolicy": "RequireAuthenticatedUser"
      },
      "identity-service-route": {
        "ClusterId": "identity-service-cluster",
        "Match": {
          "Path": "/api/identity/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "order-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "inventory-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "identity-service-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
          }
        }
      }
    }
  }
}
